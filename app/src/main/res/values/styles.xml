<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style> -->
    <!--
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@drawable/dialog</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Theme.HMKCodeApp" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorLogo</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorLogo</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/colorWhite</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/colorWhite</item>


        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.HMKCodeApp">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>




    <style name="Widget.CardContent" parent="android:Widget">

        <item name="android:paddingLeft">16dp</item>

        <item name="android:paddingRight">16dp</item>

        <item name="android:paddingTop">24dp</item>

        <item name="android:paddingBottom">24dp</item>

        <item name="android:orientation">vertical</item>

    </style>

    <style name="header" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/colorLogo</item>
        <item name="android:textSize">30dp</item>
    </style>


    <style name="date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">15dp</item>
    </style>



    <style name="NumbePickerStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColorPrimary">@color/colorLogo</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorGray</item>
    </style>


    <style name="MyAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorLogo</item>
    </style>
</resources>
